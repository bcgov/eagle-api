{
    "extends": "eslint:recommended",
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "ignorePatterns": [
        "migrations/",
        "migrations_data/",
        "migrations_temp/",
        "one_off_migrations",
        "openshift/",
        "api/test/factories",
        "api/test/data_generators/",
        "api/test/repo_warden/"
    ],
    "rules": {
        "block-scoped-var": "error",
        "semi": ["error", "always"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true}],
        "no-trailing-spaces": "error"
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    }
}